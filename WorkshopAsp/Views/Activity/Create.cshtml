@model Activity
@{
    ViewBag.Title = "Dodawanie aktywności";
}

<form asp-action="Create" method="post">

    <div class="form-group">
        <label asp-for="OrderId">Mark</label><input type="hidden" name="orderId" value=@ViewBag.orderId />
        <label asp-for="Name">Nazwa aktywności</label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="LaborPrice">Robocizna</label>
        <input asp-for="LaborPrice" class="form-control" />
    </div>

    <div class="text-left">
        <button class="btn btn-primary" type="submit">Save</button>
        <a asp-action="List" class="btn btn-secondary">Cancel</a>
    </div>
</form>
