@model Owner
<tr>
    <td>
        @Model.Name @Model.Surname
    </td>
    <td>
        @Model.PhoneNumber
    </td>
    <td class="text-center">
        <form asp-action="Delete" method="post">
            <a asp-action="Edit" class="btn btn-sm btn-warning" asp-route-ownerId="@Model.Id">Edytuj</a>
            <input type="hidden" name="id" value="@Model.Id" />
            <button type="submit" class="btn btn-danger btn-sm">Usuń</button>
            <input type="button" class="btn btn-info btn-sm" value="Samochody" onclick="location.href='@Url.Action("List", "Car", new { ownerId = Model.Id, ownerFullName = $"{Model.Name} {Model.Surname}" })'" />
        </form>
    </td>
</tr>