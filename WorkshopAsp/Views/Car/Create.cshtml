@model Car
@{
    ViewBag.Title = "Dodawanie samochodu";
}

<form asp-action="Create" method="post">
    
    <div class="form-group">
    <input type="hidden" name="ownerId" value=@ViewBag.ownerId />
        <label asp-for="Mark">Marka</label>
        <input asp-for="Mark" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Model">Model</label>
        <input asp-for="Model" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Registration">Numer rejestracyjny</label>
        <input asp-for="Registration" class="form-control" />
    </div>

    <div class="text-left">
        <button class="btn btn-primary" type="submit">Save</button>
        <a asp-action="List" class="btn btn-secondary">Cancel</a>
    </div>
</form>