@model Part
@{
    ViewBag.Title = "Dodawanie części";
}

<form asp-action="Create" method="post">
<input type="hidden" name="activityId" value=@ViewBag.ActivityId />
<div class="form-group">
    <label asp-for="Name">Nazwa części</label>
    <input asp-for="Name" class="form-control" />
</div>

    <div class="form-group">
        <label asp-for="Price">Cena</label>
        <input asp-for="Price" class="form-control" />
    </div>

    <div class="text-left">
        <button class="btn btn-primary" type="submit">Save</button>
        <a asp-action="List" class="btn btn-secondary">Cancel</a>
    </div>
</form>

